<div class="container">
<div class="home_container">
    <h1>DisBlog</h1>
    <form class="home_form" action="/createAccount" method="post">
        <input type="text" name="firstname" placeholder="First Name" required>
        <input type="text" name="lastname" placeholder="Last Name" required>
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <label>
            <input type="radio" name="avatar" id="avatar" value="avatar1.png">
            <img src="/images/avatars/avatar1.png">
        </label>
        <label>
            <input type="radio" name="avatar" id="avatar" value="avatar2.png">
            <img src="/images/avatars/avatar2.png">
        </label>
        <label>
            <input type="radio" name="avatar" id="avatar" checked value="avatar3.png">
            <img src="/images/avatars/avatar3.png">
        </label>
        <label>
            <input type="radio" name="avatar" id="avatar" value="avatar4.png">
            <img src="/images/avatars/avatar4.png">
        </label>
        <label>
            <input type="radio" name="avatar" id="avatar" value="avatar5.png">
            <img src="/images/avatars/avatar5.png">
        </label>
        <label>
            <input type="radio" name="avatar" id="avatar" value="avatar6.png">
            <img src="/images/avatars/avatar6.png">
        </label>
        <button type="submit">Create Account</button>
    </form>
</div>
</div>